
@{
    ViewData["Title"] = "ProveKlea";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Page with Navbar</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .navbar {
            background-color: #333;
            overflow: hidden;
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 1rem;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                padding: 0.5rem 1rem;
            }

                .navbar a:hover {
                    background-color: #ddd;
                    color: black;
                }

            .navbar .logo {
                font-size: 1.5rem;
                font-weight: bold;
            }

        .nav-links {
            display: flex;
            gap: 1rem;
        }

        .container {
            padding: 2rem;
        }

        footer {
            margin-top: 2rem;
            padding: 1rem;
            text-align: center;
            background-color: #333;
            color: white;
        }
    </style>
</head>
<body>

    <div class="navbar">
        <div class="logo">MyTestSite</div>
        <div class="nav-links">
            <a href="#">Home</a>
            <a href="#">About</a>
            <a href="#">Services</a>
            <a href="#">Contact</a>
        </div>
    </div>

    <div class="container">
        <h1>Welcome to the Test Page</h1>
        <p>This is a simple HTML and CSS test page with a navbar. You can use this as a starting point for your project.</p>
    </div>

    <footer>
        &copy; 2025 MyTestSite. All rights reserved.
    </footer>

</body>
</html>
