@model HotelManagement.Models.RoomRateViewModel

@{
    ViewData["Title"] = "Edit Room Rate";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="RoomTypeId">Room Type</label>
        <select id="RoomTypeId" name="RoomTypeId" class="form-control">
           @*  @foreach (var roomRate in HotelManagement.Models.RoomRate ?? new List<HotelManagement.Models.RoomRate>())
            {
                <option value="@roomRate.Id">@roomRate.RoomType?.Name</option> <!-- Sigurohuni që RoomType është i sigurt për të përdorur -->
