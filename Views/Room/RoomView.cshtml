<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Floor</th>
            <th>Room Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Room)
        {
            <tr>
                <td>@room.Id</td>
                <td>@(room.RoomType?.Emer ?? "N/A")</td>
                <td>@room.room_number</td>
                <td>@room.room_floor</td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal"
                            data-bs-target="#editRoomModal"
                            onclick="populateEditModal({
                                    id: '@room.Id',
                                    roomTypeId: '@(room.RoomType?.Id ?? 0)',
                                    roomTypeName: '@(room.RoomType?.Emer ?? "")',
                                    roomNumber: '@room.room_number',
                                    roomFloor: '@room.room_floor'
                                })">
                        <i class="fas fa-edit"></i> Edit
                    </button>

                    <form method="post" asp-action="DeleteRoom" asp-controller="Room"
                          style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this room?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@room.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
        function populateEditModal(room) {
        console.log("Room:", room);

        document.getElementById('editRoomId').value = room.id;
        document.getElementById('editRoomType').value = room.roomTypeId;
        document.getElementById('editRoomTypeName').textContent = room.roomTypeName;
        document.getElementById('editRoomNumber').value = room.roomNumber;
        document.getElementById('editRoomFloor').value = room.roomFloor;
    }

</script>
